<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DropStackWinUI.AnimThemes.Colorful"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropStackWinUI.AnimThemes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Image Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="...\AnimThemes\Assets\ColorfulLight.png"/>
        <Grid x:Name="CloudsGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SizeChanged="CloudsGrid_SizeChanged"/>
        <Rectangle x:Name="AcrylicBlur" Fill="{ThemeResource ColorsAcrylic}"/>
    </Grid>
</Page>
